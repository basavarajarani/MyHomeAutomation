rule "Print Rain History"
when 
	Time cron "0 0/1 * * * ? *"
then
		var Number rainToday = Melbourne_Weather_Rain_In_MM.state as DecimalType;
		var Number rainYesterday = Melbourne_Weather_Rain_In_MM.maximumSince(now.minusHours(48)).state as DecimalType
		var Number Current_Temp = Melbourne_Weather_Current_Temp_In_Celcius.state as DecimalType;
		logDebug("HomeAutomation","Rain Today:"+rainToday);
		logDebug("HomeAutomation","Rain Yesterday:"+rainYesterday);
	
end
